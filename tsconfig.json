{
  "compilerOptions": {
    "target": "es2020",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    // "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*", "kenexfile.ts", "server.ts", "migrations/**/*" ],
  "typeAcquisition": {
    "include": ["jest"]
  },
  "exclude": [
    "node_modules",
    "src/test",
    "src/resolvers/upload",
  ]
}
